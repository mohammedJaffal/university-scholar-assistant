{
  "name": "projet_pfe",
  "version": "1.0.0",
  "description": "Chatbot FSBM",
  "scripts": {
    "build:css": "tailwindcss -i ./src/input.css -o ./dist/style.css",
    "watch:css": "tailwindcss -i ./src/input.css -o ./dist/style.css --watch",
    "build:ts": "tsc",
    "watch:ts": "tsc --watch",
    "watch": "npm-run-all --parallel watch:*",
    "build": "npm run build:ts && npm run build:css",
    "serve": "npx http-server ."
  },
  "keywords": [
    "chatbot",
    "login",
    "signup",
    "tailwind",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "http-server": "^14.1.1",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3"
  }
}
